<Page x:Class="Coordinates.UI.Views.Shell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:Coordinates.UI.Views"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:HamburgerMenu x:Name="MyHamburgerMenu">

            <controls:HamburgerMenu.PrimaryButtons>

                <!--  Mainpage button  -->
                <controls:HamburgerButtonInfo ClearHistory="True" PageType="views:MainPage">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48" Height="48"
                                Symbol="Home" />
                        <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                               Text="Start" />
                    </StackPanel>
                </controls:HamburgerButtonInfo>

                <!--  Coding playground button  -->
                <controls:HamburgerButtonInfo ClearHistory="True" PageType="views:CodingPlayground">
                    <StackPanel Orientation="Horizontal">
                        <!-- Symbol icon reference: https://msdn.microsoft.com/pl-pl/library/windows/apps/dn252842 -->
                        <SymbolIcon Width="48" Height="48"
                                Symbol="Edit" />
                        <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                               Text="Coding Playground" />
                    </StackPanel>
                </controls:HamburgerButtonInfo>

                <!--  Measurement button  -->
                <controls:HamburgerButtonInfo ClearHistory="True" PageType="views:MeasurementsPage">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48" Height="48"
                                Symbol="Calculator" />
                        <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                               Text="Pomiary" />
                    </StackPanel>
                </controls:HamburgerButtonInfo>

                <!--  Visualisation button  -->
                <controls:HamburgerButtonInfo ClearHistory="True" PageType="views:VisualisationPage">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48" Height="48"
                                Symbol="Pictures" />
                        <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                               Text="Wizualizacja" />
                    </StackPanel>
                </controls:HamburgerButtonInfo>

            </controls:HamburgerMenu.PrimaryButtons>

            <controls:HamburgerMenu.SecondaryButtons>

                <!--  settingspage button  -->
                <controls:HamburgerButtonInfo x:Name="SettingsButton" PageParameter="0"
                                          PageType="views:SettingsPage">
                    <controls:HamburgerButtonInfo.NavigationTransitionInfo>
                        <SuppressNavigationTransitionInfo />
                    </controls:HamburgerButtonInfo.NavigationTransitionInfo>
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Width="48" Height="48"
                                Symbol="Setting" />
                        <TextBlock Margin="12,0,0,0" VerticalAlignment="Center"
                               Text="Ustawienia" />
                    </StackPanel>
                </controls:HamburgerButtonInfo>
            </controls:HamburgerMenu.SecondaryButtons>

        </controls:HamburgerMenu>
        <Grid x:Name="BottomBar" Grid.Row="1">
            <CommandBar ClosedDisplayMode="Compact">
                <!--Here to place view and datacontext of viewmodel from viewmodellocator-->
                <AppBarButton Icon="List" Label="Mode">
                    <AppBarButton.Flyout>
                        <MenuFlyout Placement="Top">
                            <MenuFlyoutItem Text="Cho" />
                            <MenuFlyoutItem Text="Na" />
                            <MenuFlyoutItem Text="Solo" />
                            <MenuFlyoutItem Text="Qtasiarzu" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar>
        </Grid>
    </Grid>

</Page>